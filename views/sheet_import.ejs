<div class="container">
    <h1 class="mb-4">CSVファイルを読み込む</h1>

    <form action="/manager/sheet/<%= id_sheet %>/import" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="mb-3">
            <label for="csvfile" class="form-label">CSVファイルを選択</label>
            <input type="file" name="csvfile" id="csvfile" class="form-control" required>
        </div>
        <div class="d-flex gap-2">
            <a href="/manager/sheet/<%= id_sheet %>/read" class="btn btn-secondary">戻る</a>
            <button type="submit" class="btn btn-primary">読込</button>
        </div>
    </form>
</div>
