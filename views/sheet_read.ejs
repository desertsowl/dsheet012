<div class="container">
    <h1 class="mb-4"><%= title %></h1>

    <% if (documents.length === 0) { %>
        <p>まだチェックシートの内容はありません。</p>
    <% } else { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <% Object.keys(documents[0]).forEach(field => { %>
                        <th><%= field %></th>
                    <% }) %>
                </tr>
            </thead>
            <tbody>
                <% documents.forEach(doc => { %>
                    <tr>
                        <% Object.keys(doc).forEach(field => { %>
                            <td><%= doc[field] %></td>
                        <% }) %>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

    <!-- 戻るボタン -->
    <div class="mt-3">
        <a href="<%= backLink %>" class="btn btn-secondary me-2">戻る</a>

        <!-- 編集ボタン: データが空の場合のみ表示 -->
        <% if (isEmpty) { %>
            <a href="/manager/sheet/<%= id_sheet %>/edit" class="btn btn-primary">編集</a>
        <% } %>
    </div>
</div>
